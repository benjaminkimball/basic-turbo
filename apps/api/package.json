{
  "private": true,
  "name": "@basic-turbo/api",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "build": "rimraf dist && tsc",
    "db:dev": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "dev": "nodemon src/main.ts",
    "format": "prettier --write 'src/**/*'",
    "lint": "eslint 'src/**/*.ts'",
    "prepush": "npm run types && npm run format && npm run lint && npm test",
    "start": "npm run build && node dist/main.js",
    "test": "jest --passWithNoTests",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "npm test -- --watch",
    "types": "npm run types:check && npm run types:graphql",
    "types:check": "tsc --noEmit",
    "types:graphql": "rimraf generated && ts-node --transpileOnly scripts/generateGraphQLTypes.ts"
  },
  "prisma": {
    "seed": "ts-node --esm --transpileOnly scripts/seedDatabase.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.7.0",
    "@devoxa/prisma-relay-cursor-connection": "^3.1.0",
    "@prisma/client": "^5.3.1",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.21.3",
    "helmet": "^7.0.0",
    "nexus": "^1.3.0",
    "pino": "^8.11.0",
    "pino-http": "^8.3.3"
  },
  "devDependencies": {
    "@ngneat/falso": "^7.1.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.8.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "dotenv": "^16.0.3",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.3.1",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
